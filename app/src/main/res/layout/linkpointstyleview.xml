<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentview1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <HorizontalScrollView
        android:id="@+id/scrolllink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/clickhotview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/hottunnel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.player.util.barview.CircleImageView
                android:id="@+id/hotimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.player.util.barview.RoundProgressBar
                android:id="@+id/RprogressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </HorizontalScrollView>

</RelativeLayout>