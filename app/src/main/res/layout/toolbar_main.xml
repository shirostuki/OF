<?xml version="1.0" encoding="utf-8"?><!-- 自定义toolbar布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_lv"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_toolbar_top_size_height"
    android:background="?attr/colorPrimary"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:layout_scrollFlags="scroll|enterAlways">

    <ImageView
        android:layout_width="7dp"
        android:layout_height="15dp"
        android:src="@mipmap/ic_drawer_home" />

    <com.dilidili.of.view.CircleImageView
        android:id="@+id/img_head"
        android:layout_width="@dimen/img_head_size_min"
        android:layout_height="@dimen/img_head_size_min"
        android:layout_marginLeft="14dp"
        android:src="@mipmap/bili_default_avatar" />

    <TextView
        style="@style/style_text_big"
        android:layout_width="0dp"
        android:layout_marginLeft="14dp"
        android:layout_weight="1"
        android:text="@string/not_online"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="22dp"
        android:layout_height="19dp"
        android:layout_marginLeft="28dp"
        android:src="@mipmap/ic_menu_top_game_center" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="19dp"
        android:layout_marginLeft="28dp"
        android:src="@mipmap/ic_toolbar_menu_download" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="19dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="14dp"
        android:src="@mipmap/ic_toolbar_menu_search" />
</LinearLayout>