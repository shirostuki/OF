<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_theme"
    android:fitsSystemWindows="true">
    <!-- 抽屉头部布局 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:orientation="vertical">
        
        <com.dilidili.of.view.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/img_head_size_small"
            android:layout_height="@dimen/img_head_size_small"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="21dp"
            android:src="@mipmap/bili_default_avatar" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/style_text_small"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="15dp"
            android:text="点击头像登录"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/tv_level"
            style="@style/style_text_min"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/padding_size_small"
            android:padding="@dimen/padding_size_min"
            android:background="@drawable/bg_level"
            android:text="正式会员"
            android:textColor="@color/activity_theme" />

        <TextView
            android:id="@+id/tv_coins"
            style="@style/style_text_small"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="@dimen/padding_size_small"
            android:text="硬币：333"
            android:textColor="@color/transparent_white" />
    </LinearLayout>
    <ImageView
        android:id="@+id/img_skin"
        android:layout_width="@dimen/img_head_size_min"
        android:layout_height="@dimen/img_head_size_min"
        android:src="@mipmap/ic_switch_daily"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"/>

    <ImageView
        android:id="@+id/img_mess"
        android:layout_width="@dimen/img_head_size_min"
        android:layout_height="@dimen/img_head_size_min"
        android:src="@mipmap/ic_mess"
        android:layout_toLeftOf="@id/img_skin"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
