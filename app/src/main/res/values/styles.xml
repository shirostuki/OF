<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/activity_theme</item>
        <item name="colorPrimaryDark">@color/activity_theme</item>
        <item name="colorAccent">@color/activity_theme</item>
    </style>

    <style name="ImageTranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- 加载框动画 -->
    <style name="x_loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="style_text_min">
        <item name="android:textSize">@dimen/text_size_min</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="style_text_min_m">
        <item name="android:textSize">@dimen/text_size_min_m</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="style_text_min_x">
        <item name="android:textSize">@dimen/text_size_min_x</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="style_text_small">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_text_big">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- tab导航字体 -->
    <style name="style_text_tablayout">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <!-- 列表图标样式 -->
    <style name="style_img_ic">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">19dp</item>
    </style>
    <style name="style_img_ic_min">
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_height">12dp</item>
    </style>
    <style name="style_img_ic_cross">
        <item name="android:layout_width">19dp</item>
        <item name="android:layout_height">10dp</item>
    </style>
</resources>
